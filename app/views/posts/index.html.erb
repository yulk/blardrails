<h1>我的BLOG</h1>
<style type="text/css">
    table {
        border: 1px;
        text-align: left;
    }
</style>
<table>
  <tr>
    <th>作者</th>
    <th>标题</th>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '查看', post %></td>
    <td><%= link_to '编辑', edit_post_path(post) %></td>
    <td><%= link_to '删除', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

